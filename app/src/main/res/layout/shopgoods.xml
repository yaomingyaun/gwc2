    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/jian"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/jian"/>
    <EditText
        android:id="@+id/add_count"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <ImageView
        android:id="@+id/jia"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/add"/>

</LinearLayout>
